<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/demoFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?android:windowBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="Welcome Back, User"
        android:textSize="25sp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Where Are You Going Today?"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="60dp"/>

    <Button
        android:id="@+id/createRequestBtn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#1F6CCA"
        android:padding="20dp"
        android:text="MY REQUEST"
        android:textSize="25sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="25dp"/>

    <Button
        android:id="@+id/viewOffersBtn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#209E43"
        android:padding="20dp"
        android:text="MY OFFER"
        android:textSize="25sp" />


</LinearLayout>


