<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/man_1"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="7dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_male_24"
            android:layout_marginHorizontal="15dp"
            android:layout_gravity="bottom"/>
        <TextView
            android:id="@+id/manageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jared"
            android:textSize="17dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="7dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_local_phone_24"
            android:layout_marginHorizontal="15dp"
            android:layout_gravity="bottom"/>
        <TextView
            android:id="@+id/manageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="014-92810521"
            android:textSize="17dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="7dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_emoji_people_24"
            android:layout_marginHorizontal="15dp"
            android:layout_gravity="bottom"/>
        <TextView
            android:id="@+id/manageLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TBS, Kuala Lumpur"
            android:textSize="17dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="7dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_add_location_24"
            android:layout_marginHorizontal="15dp"
            android:layout_gravity="bottom"/>
        <TextView
            android:id="@+id/manageDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="International House, UM"
            android:textSize="17dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="7dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_price_check_24"
            android:layout_marginHorizontal="15dp"
            android:layout_gravity="bottom"/>
        <TextView
            android:id="@+id/manageFees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fees: RM6.50"
            android:textSize="17dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="7dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_thumbs_up_down_24"
            android:layout_marginHorizontal="15dp"
            android:layout_gravity="bottom"/>
        <TextView
            android:id="@+id/manageTrustPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trust Point: 95/100"
            android:textSize="17dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="7dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_create_24"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/manageExtraNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extra Note: I'm back from a trip, so there might be a few luggage."
            android:textSize="17dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="3.5dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/acceptBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:textSize="20dp"
        android:paddingHorizontal="60dp"
        android:paddingVertical="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/rateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate"
        android:textSize="20dp"
        android:paddingHorizontal="60dp"
        android:paddingVertical="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
</LinearLayout>